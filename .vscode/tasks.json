{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build with g++-15",
            "type": "shell",
            "command": "/opt/homebrew/bin/g++-15",
            "args": [
                "-Wall",
                "-Wextra",
                "-g3",
                "${file}",
                "-o",
                "${fileDirname}/output/${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}
